{
  "name": "snax-browser-extension",
  "version": "0.1.5",
  "private": true,
  "dependencies": {
    "@snaxfoundation/snaxjs": "^20.0.0-beta5",
    "@snaxfoundation/snaxjs-ecc": "^4.0.5",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-polyfill": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-react-app": "3.1.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-runtime": "6.26.0",
    "bip39": "2.5.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "clean-webpack-plugin": "0.1.19",
    "color": "3.0.0",
    "copy-webpack-plugin": "4.5.2",
    "crypto-js": "3.1.9-1",
    "css-loader": "0.28.7",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "eslint": "4.10.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.39.1",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.4.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "history": "4.7.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "23.6.0",
    "localforage": "^1.7.3",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "prop-types": "^15.6.2",
    "raf": "3.4.0",
    "react": "16.4.1",
    "react-dev-utils": "5.0.1",
    "react-dom": "16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "4.3.1",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "resolve": "1.6.0",
    "selenium-webdriver": "4.0.0-alpha.1",
    "style-loader": "0.19.0",
    "styled-components": "4.1.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.9.4",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3",
    "write-file-webpack-plugin": "4.4.1"
  },
  "devDependencies": {
    "remote-redux-devtools": "^0.5.13"
  },
  "scripts": {
    "test": "jest --projects src",
    "integration-test": "jest --projects selenium",
    "start": "node scripts/start.js",
    "build": "webpack --config ./config/webpack.config.prod.js && webpack --config ./config/webpack.config.prod.ext.js",
    "package": "webpack --config ./config/webpack.config.dev.js --env.packaging=true"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "es2017",
      "stage-2"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "projects": [
      "src",
      "selenium"
    ],
    "collectCoverageFrom": [
      "selenium/**/*.js",
      "src/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/selenium/**/?(*.)(spec|test).js",
      "<rootDir>/src/**/__tests__/**/*.js",
      "<rootDir>/src/**/?(*.)(spec|test).js"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      ".+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ]
  }
}
